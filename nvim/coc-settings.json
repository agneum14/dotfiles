{
   "languageserver": {
      "digestif": {
         "command": "digestif",
         "filetypes": ["tex", "plaintex", "context"]
      },
      "bash": {
         "command": "bash-language-server",
         "args": ["start"],
         "filetypes": ["sh"]
      }
   },
   "markdownlint.config": {
      "default": true,
      "line_length": false
   }
}
